<div class="container-fluid text-center" style="background-color: #EEEEEE;">
  <div class="row">
    <div class="col-sm-8 mx-auto bg-white text-left vh-100" >

        <div class="article-title" style="margin-top: 30px;">
          <p class="text-left" style="font-size: 40px;">
            <%= @article.title %>
          </p>
        </div>

        <div class="d-flex">
          <% @tags.each do |tag| %>
            <div class="badge bg-secondary" style="margin-right: 10px;">
              <%= tag.name %>
            </div>
          <% end %>
        </div>

        
          <% @article.images.each do |image| %>
            <%= image_tag image %>
          <% end %>
        <div style="flex-direction: column">
          <div id="image-list"></div>
        </div>

        <div class="article-content mb-5">
          <%= @article.content %>
        </div>

        <div style="width: 100px;">
          <%= link_to "編集", edit_article_path, class:"edit-link" %>
        </div>

        <div class="d-flex align-items-end">
          <%= form_with(model: [@article, @comment], local: true) do |form| %>
            <%= form.text_area :text, placeholder: "コメントする", rows: "2" %>
            <%= form.submit "SEND" %>
          <% end %>
        </div>

        <%= render partial: "likes/like", locals: { article: @article } %>

        <div class="comments">
          <h4>＜コメント一覧＞</h4>
          <% @comments.each do |comment| %>
            <p>
              <strong><%= comment.user.nickname %>：</strong>
              <%= comment.text %>
            </p>
          <% end %>
        </div>
        
    </div>
  </div>
</div>