<header>
  <%= render "shared/header" %>
</header>

<div class="container-fluid text-center" style="background-color: #EEEEEE;">
  <div class="row">
    <div class="col-sm-8 mx-auto bg-white text-left" >

        <div class="article-title" style="margin-top: 30px;">
          <p class="text-left" style="font-size: 40px;">
            <%= @article.title %>
          </p>
        </div>

        <div class="d-flex">
          <% @tags.each do |tag| %>
            <div class="badge bg-secondary" style="margin-right: 10px;">
              <%= tag.name %>
            </div>
          <% end %>
        </div>

        
          <% @article.images.each do |image| %>
            <%= image_tag image %>
          <% end %>
        <div style="flex-direction: column">
          <div id="image-list"></div>
        </div>

        <div class="article-content mb-5">
          <%= @article.content %>
        </div>

        <div class="text-left">
          <button type="button" class=" btn btn-outline-info" style="border: solid 2px #0000CD">
            <%= link_to "編集", edit_article_path, method: :get, style: "color: #0000CD; font-weight: bold"  %>
          </button>
        </div>


    </div>
  </div>
</div>