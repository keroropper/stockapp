<%= render "shared/header" %>

<div class="container-fluid bg-light">
  <div class="row">

    <div class="col-sm-3 text-center">
      <h1>テスト</h1>
    </div>

    <div class="col-sm-6">
      <% @articles.each do |article| %>
        <div class="list-group w-auto border-bottom bg-white m-0 ">
          <%= link_to article_path(article.id) do %>

            <div class="list-group list-group-flush">

                <div>
                  <%=time_ago_in_words(article.created_at)%>前
                </div>

                <div>
                  <h2>
                  <%= article.title %>
                  </h2>
                </div>

                <div class="d-flex">
                  <% article.tags.each do |tag| %>
                    <p>#<%= tag.name %></P>
                  <% end %>
                </div>

                <div>
                  <a class="through-content">
                    <p class="mb-1"><%= article.content %></p>
                  </a>
                </div>

            </div>

          <% end %>
        </div>
      <% end %>
    </div>

    <div class="col-sm-3 text-center">
      <h1>テスト</h1>
    </div>

  </div>
</div>